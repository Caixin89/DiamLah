<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:padding="10dp">
    <LinearLayout android:orientation="vertical" android:layout_weight="2" android:gravity="center" android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/linearLayout1">
        <ImageView android:id="@+id/imageView1" android:layout_height="wrap_content" android:src="@drawable/icon" android:layout_width="wrap_content"></ImageView>
        <TextView  android:gravity="center" android:text="Diamlah! Version 1.0\nFor iCreate Mobility Challenge 2011" android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <LinearLayout android:layout_weight="1"  android:gravity="center" android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/linearLayout2">
        <TextView android:gravity="center" android:text="@string/about" android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <LinearLayout android:layout_weight="1" android:gravity="center" android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/linearLayout3">
        <TextView android:gravity="center" android:text="@string/credit" android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    
</LinearLayout>
